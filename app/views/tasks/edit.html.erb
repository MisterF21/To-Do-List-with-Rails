<h2>Edit Task</h2>

<% if @task.errors.any? %>
  <h3>Please fix the following errors:</h3>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<form action="/tasks/<%= @task.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="task_name">Change to:</label>
  <input id="task_name" name="task" type="text" value="<%= @task.task %>">
  <button>Update Task</button>
</form>

<p><a href="/tasks/<%= @task.id %>"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow">Delete</a></p>
<p><a href="/tasks">Return to your tasks list</a></p>


